@model Base.Model1.OfficeReq

@{
    ViewBag.Title = "تعديل طلب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5"> 
    <h2 class="text-center mb-4">تعديل المطلب</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.officeID, "مكتب الخدمة")
            @Html.DropDownListFor(model => model.officeID, new SelectList(ViewBag.OfficeList, "ID", "OfficeName", Model.officeID), "اختر مكتب الخدمة", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.reqID, "طلب الخدمة")
            @Html.DropDownListFor(model => model.reqID, new SelectList(ViewBag.ReqList, "ID", "Name", Model.reqID), "اختر طلب الخدمة", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isBool, "الحالة")
            @Html.CheckBoxFor(model => model.isBool, new { @class = "form-check-input" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, "المبلغ")
            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", type = "number" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ActualAmount, "المبلغ الفعلي")
            @Html.TextBoxFor(model => model.ActualAmount, new { @class = "form-control", type = "number" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">تحديث</button>
            @Html.ActionLink("إلغاء", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>