
@model Base.Model1.OfficeReq

@{
    ViewBag.Title = "حذف المطلب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <h4>هل أنت متأكد أنك تريد حذف هذا الطلب؟</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            مكتب الخدمة
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HajjOffice.OfficeName)
        </dd>
        <dt class="col-sm-2">
            طلب الخدمة
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HajjReq.Name)
        </dd>
        <dt class="col-sm-2">
            الحالة
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isBool)
        </dd>
        <dt class="col-sm-2">
            المبلغ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            المبلغ الفعلي
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualAmount)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "OfficeReq", new { id = Model.ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="text-center">
            <button type="submit" class="btn btn-danger">حذف</button>
            @Html.ActionLink("إلغاء", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
