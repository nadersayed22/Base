@model IEnumerable<Base.Model1.HajjOffice>

@{
    ViewBag.Title = "قائمة مكاتب الخدمة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">مكاتب الخدمة</h2>

    <div class="text-right mb-3">
        <a href="@Url.Action("Create", "HajjOffice")" class="btn btn-primary btn-lg" style="display: inline-flex; align-items: center;" title="إنشاء مكتب خدمة">
            <i class="fas fa-plus"></i> 
        </a>
    </div>

    <!-- Your card and table code here -->
</div>

<!-- Make sure to include Font Awesome in your _Layout.cshtml or here -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


<div class="card">
    <div class="card-header">
        <h4 class="text-center"> مكاتب الخدمة</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">رقم المسلسل</th>
                    <th class="text-center">مكتب الخدمة</th>
                    <th class="text-center">هاتف المكتب</th>
                    <th class="text-center">المسؤول</th>
                    <th class="text-center">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.ID</td>
                        <td class="text-center">@item.OfficeName</td>
                        <td class="text-center">@item.OfficePhone</td>
                        <td class="text-center">@item.Representative?.Name</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-sm btn-warning" title="تعديل">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-sm btn-info" title="عرض">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-sm btn-danger" title="حذف">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#officeReqModal" onclick="loadOfficeReqForm(@item.ID) " title="ربط طلب">
                                <i class="fas fa-link"></i> 
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

<!-- Modal for creating Hajj Office request -->
<div class="modal fade" id="officeReqModal" tabindex="-1" role="dialog" aria-labelledby="officeReqModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body-content">
                <!-- Partial view content will be loaded here dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function loadOfficeReqForm(officeId) {
            $.ajax({
                url: '@Url.Action("CreateOfficeReq", "HajjOffice")', // Adjust the URL to match your routing
                type: 'GET',
                data: { id: officeId }, // Send officeId to the server
                success: function (data) {
                    $('#modal-body-content').html(data); // Load the partial view into the modal body
                },
                error: function () {
                    alert('فشل في تحميل النموذج.');
                }
            });
        }
    </script>
}
