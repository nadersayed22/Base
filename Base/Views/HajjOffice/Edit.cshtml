@model Base.Model1.HajjOffice

@{
    ViewBag.Title = "تعديل مكتب خدمة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />

<div class="container mt-5">
   

    @using (Html.BeginForm())
    {
        <div class="card shadow-lg border-0">
            <div class="card-header bg-dark text-white">
                <h4 class="text-center">تعديل مكتب الخدمة  </h4>
            </div>
            <div class="card-body">

                <!-- Office Name Field -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.OfficeName, "اسم المكتب", new { @class = "col-md-2 col-form-label text-right" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OfficeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OfficeName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Office Phone Field -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.OfficePhone, "رقم الهاتف", new { @class = "col-md-2 col-form-label text-right" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OfficePhone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OfficePhone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Office Representative Dropdown -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.OfficeRepresentativeID, "المسؤول", new { @class = "col-md-2 col-form-label text-right" })
                    <div class="col-md-10">
                        @Html.DropDownList("OfficeRepresentativeID", ViewBag.RepresentativeList as SelectList, "حدد المسؤول", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OfficeRepresentativeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-group row mt-4">
                    <div class="col-md-10 offset-md-2 text-right">
                        <input type="submit" value="حفظ" class="btn btn-success btn-lg px-5" />
                        @Html.ActionLink("العودة", "Index", null, new { @class = "btn btn-secondary btn-lg px-5 ml-3" })
                    </div>
                </div>

            </div>
        </div>
    }
</div>
